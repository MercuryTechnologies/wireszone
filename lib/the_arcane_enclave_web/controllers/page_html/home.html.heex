<.flash_group flash={@flash} />
<div class="text-center">
    <h1 class="text-4xl font-bold mb-6 text-gray-800">Welcome to the Wires Zone!</h1>
    <.form :let={f} for={%{}} phx-submit="search">
      <.input type="text"  autocomplete="off" field={f[:search_query]} placeholder="Enter an IMAD or other wire ID" class="border border-gray-300 rounded-lg px-4 py-2 w-64 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
      <button class="ml-2 bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">Search!</button>
    </.form>
</div>
